function Scr_textos(){
	switch npc_nome{
		case "primeiro texto":
		texto[0] ="Oi, eu sou uma baleia."
		texto[1] ="Você é um peixe engraçado."
		texto[2] ="Você poderia pegar minha coroa?"
		texto[3] ="Está com a lula."
		texto[4] ="É só seguir a direção da placa."
		texto[5] ="Se você sair daqui não tem como voltar!"
		texto[6] ="Você terá 120 segundos para encontrar ela."
		texto[7] ="Cuidado com os monstros."
		texto[8] ="Eles podem te machucar."
		
		
		break;
	}
	switch npc_nome{
		case "segundo texto":
		texto[0] ="A BALEIA É MINHA DEUSA!!!!!!!"
		texto[1] ="EU VIVO POR ELA E APENAS ISSO!!!!!"
		texto[2] ="PEGUE A COROA E DEVOLVA PRA ELA AGORA!!!!!"
		texto[3] ="NÃO OUSE FAZER NADA CONTRA ELA!!!!!!!!!"
		texto[4] ="É isso, boa sorte do palhaço."
		
		break;
	}
	
	switch npc_nome{
		case "terceiro texto":
		texto[0] ="Quem vai contra a mãe..."
		texto[1] ="Não merece viver."
		texto[2] ="Bem feito."
		texto[3] ="Hahaha"
		texto[4] ="HAHAHAHAHAHAHAHAHAAH"
		
		break;
	}
	switch npc_nome{
		case "quarto texto":
		texto[0] ="Dizem que morreu de dar a bunda."
		texto[1] =" HAHAHAHAHAHAHAHAHAAH"
		
		break;
	}
	switch npc_nome{
		case "quinto texto":
		
		texto[0] ="Você é a lula malégna"
		texto[1] ="Malígna, desgraçada"
		texto[2] ="Desprezível, lixo e inútil"
		
		break;
	}
}